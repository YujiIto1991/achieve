<div class="container">
  <div class="wrapper col-md-8 col-md-offset-2 col-sm-10">
    <% @poems.each do |poem| %>
      <div class="row">
        <%= poem.title %>
        <%= poem.content %>
        <%= poem.author %>
        <%= link_to '詳細', poem_path(poem.id),
        class: 'btn btn-default btn-sm btn-success' %>
      </div>
    <% end %>
  </div>
</div>