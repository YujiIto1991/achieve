<div class="container">
  <div class="wrapper col-md-8 col-md-offset-2 col-sm-10">
    <h1>ブログ一覧</h1>
      <%= link_to "ブログを作成する", new_blog_path, class: 'btn btn-default' %>
    <% @blogs.each do |blog| %>
    <div class="row">
      <div class="col-md-4 col-sm-4"><h4><strong><%= blog.title %></strong></div>
      <div class="col-md-4 col-sm-4"><%= profile_img(blog.user) %>
      @<%= blog.user.name %></h4></div>
      <%= link_to "編集", edit_blog_path(blog.id), class: 'btn btn-default btn-sm btn-success' %>
      <%= link_to "削除", blog_path(blog.id), method: :delete,
      data: { confirm: '本当に削除していいですか？'}, class: 'btn btn-default btn-sm btn btn-danger' %>
      <div  class="col-md-12 col-sm-12"><p><%= blog.content %></p></div>
    </div>
    <% end %>
  </div>
</div>
